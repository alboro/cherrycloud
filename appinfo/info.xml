<?xml version="1.0"?>
<info>
    <id>fractalnote</id>
    <name>FractalNote</name>
    <description>FractalNote is hierarchical notes web-editor for Nextcloud/Owncloud, that opens CherryTree *.ctb files</description>
    <licence>apache</licence>
    <author>Alexander Demchenko</author>
    <version>0.0.3</version>
    <namespace>FractalNote</namespace>
    <category>office</category>
    <category>organization</category>
    <category>tools</category>
    <website>https://github.com/alboro/fractalnote</website>
    <bugs>https://github.com/alboro/fractalnote/issues</bugs>
    <dependencies>
        <php min-version="5.6" max-version="7"/>
        <owncloud min-version="9.1" max-version="10" />
        <nextcloud min-version="10" max-version="12" />
    </dependencies>
    <repair-steps>
        <install>
            <step>OCA\FractalNote\Migration\AddMimetypeToFilecache</step>
        </install>
        <uninstall>
            <step>OCA\FractalNote\Migration\RemoveMimetypeFromFilecache</step>
        </uninstall>
    </repair-steps>
</info>